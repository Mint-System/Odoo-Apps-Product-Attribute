<?xml version="1.0" encoding='UTF-8'?>
<odoo>

    <record id="view_stock_quant_tree_editable" model="ir.ui.view">
        <field name="name">product_end_of_life_dates.view_stock_quant_tree_editable</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="end_of_support" widget="remaining_days" optional="show" />
                <field name="end_of_sale" widget="remaining_days" optional="show" />
                <field name="end_of_life" widget="remaining_days" optional="show" />
            </xpath>
        </field>
    </record>

</odoo>
